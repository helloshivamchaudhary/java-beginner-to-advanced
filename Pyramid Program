import java.util.*;
public class q1 {
    public static void main(String args[]) {
        System.out.println("no of *");
        Scanner sc =new Scanner(System.in);
        int N =sc.nextInt();

   
        for (int i=0; i<N; i++) 
            { 
                System.out.print(" "); 
            }  
            for (int j=0; j<=i; j++ ) 
            { 
                System.out.print("* "); 
            } 
  
            System.out.println(); 
        } 
    }
